{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["@sveltejs/opencode"],
  "mcp": {
    "Better Auth": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp",
    },
    "nixos": {
      "enabled": true,
      "type": "local",
      "command": ["nix",
        "run",
        "github:utensils/mcp-nixos",
        "--"
      ]
    },
    "ESLint": {
      "enabled": true,
       "type": "local",
      "command": ["pnpm",
        "dlx",
        "@eslint/mcp"
      ]
  }
}}
